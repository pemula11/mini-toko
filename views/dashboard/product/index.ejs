<% layout('layouts/app') %>

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    
</div>
<!-- 
 -->

<!-- Content Row -->

<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">List Products</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                
                                <th>Product Code</th>
                                <th>Product Name</th>
                                <th>Stock</th>
                                <th>price</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(function(product) { %>
                                <tr>
                                    <td><%= product.product_code %></td>
                                    <td><%= product.product_name %></td>
                                    <td><%= product.stock %></td>
                                    <td><%= product.price %></td>
                                    <td>
                                        <a href="/admin/product/edit/<%= product.id %>" class="btn btn-primary">Edit</a>
                                        <form action="/admin/product/<%= product.id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>