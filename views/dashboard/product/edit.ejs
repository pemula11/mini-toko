<% layout('layouts/app') %>
<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Edit Product</h1>
    




    <div class="card shadow mb-4">
        <div class="card-body">
            <form action="/admin/edit-product/<%=product.id  %>?_method=PUT" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label for="name" class="form-label">Product Name</label>
                    <input 
                        type="text" 
                        name="product_name" 
                        id="name" 
                        class="form-control <%= product.errors?.product_name ? 'is-invalid' : '' %>"
                        value="<%= product.product_name || '' %>"
                        required
                    >
                    <div class="invalid-feedback">
                        Please enter a product name
                    </div>
                </div>

                <div class="mb-3">
                    <label for="code" class="form-label">Product Code</label>
                    <input 
                        type="number" 
                        name="product_code" 
                        id="code" 
                        class="form-control <%= product.errors?.product_code ? 'is-invalid' : '' %>"
                        value="<%= product.product_code || '' %>"
                        required
                    >
                    <div class="invalid-feedback">
                        Please enter a valid product code
                    </div>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input 
                        type="number" 
                        name="price" 
                        id="price" 
                        class="form-control <%= product.errors?.price ? 'is-invalid' : '' %>"
                        value="<%= product.price || '' %>"
                        min="0"
                        step="0.01"
                        required
                    >
                    <div class="invalid-feedback">
                        Please enter a valid price
                    </div>
                </div>

                <div class="mb-3">
                    <label for="stock" class="form-label">Stock</label>
                    <input 
                        type="number" 
                        name="stock" 
                        id="stock" 
                        class="form-control <%= product.errors?.stock ? 'is-invalid' : '' %>"
                        value="<%= product.stock || '' %>"
                        min="0"
                        required
                    >
                    <div class="invalid-feedback">
                        Please enter a valid stock amount
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Edit Product</button>
            </form>
        </div>
    </div>
</div>

<script>
// Form validation
(function () {
    'use strict'
    const forms = document.querySelectorAll('.validated-form')
    Array.from(forms).forEach(form => {
        form.addEventListener('submit', event => {
            if (!form.checkValidity()) {
                event.preventDefault()
                event.stopPropagation()
            }
            form.classList.add('was-validated')
        }, false)
    })
})()
</script>